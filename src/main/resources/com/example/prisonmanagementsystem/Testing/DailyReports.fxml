<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.prisonmanagementsystem.Warden.DailyReportsController">
    <children>
        <!-- HEADER -->
        <Label layoutX="14.0" layoutY="14.0" text="Daily Activity &amp; Security Reports">
            <font>
                <Font name="Arial Bold" size="20.0" />
            </font>
        </Label>

        <!-- SECTION 1: FILTERS (Top Row) -->
        <Label layoutX="20.0" layoutY="60.0" text="Report Type:" />
        <ComboBox fx:id="reportTypeComboBox" layoutX="100.0" layoutY="56.0" prefHeight="26.0" prefWidth="150.0" promptText="Select Type" />

        <Label layoutX="270.0" layoutY="60.0" text="Date:" />
        <DatePicker fx:id="reportDatePicker" layoutX="310.0" layoutY="56.0" prefHeight="26.0" prefWidth="130.0" />

        <Label layoutX="460.0" layoutY="60.0" text="Block (Opt):" />
        <ComboBox fx:id="blockComboBox" layoutX="540.0" layoutY="56.0" prefHeight="26.0" prefWidth="100.0" promptText="All" />

        <!-- GENERATE BUTTON -->
        <Button layoutX="660.0" layoutY="56.0" mnemonicParsing="false" onAction="#generateReportOnClick" prefHeight="26.0" prefWidth="120.0" style="-fx-background-color: #3498db;" text="Generate Report" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>

        <Line endX="760.0" layoutX="20.0" layoutY="100.0" startX="0.0" stroke="#b5b5b5" />

        <!-- SECTION 2: OUTPUT (Middle) -->
        <Label layoutX="20.0" layoutY="110.0" text="Generated Report Content:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <!-- Text Area for the report result -->
        <TextArea fx:id="summaryTextArea" editable="false" layoutX="20.0" layoutY="140.0" prefHeight="280.0" prefWidth="760.0" promptText="Select filters and click Generate to see the report..." style="-fx-font-family: 'Monospaced'; -fx-font-size: 13;" />

        <!-- NAVIGATION -->
        <Button layoutX="680.0" layoutY="440.0" mnemonicParsing="false" onAction="#backOnClick" prefHeight="30.0" prefWidth="100.0" text="Back" />
    </children>
</AnchorPane>