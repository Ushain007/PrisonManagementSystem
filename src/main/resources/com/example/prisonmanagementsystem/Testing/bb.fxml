<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.prisonmanagementsystem.Librarian.BookIssueController">
    <children>
        <!-- HEADER -->
        <Label layoutX="14.0" layoutY="14.0" text="Issue Book to Borrower">
            <font>
                <Font name="Arial Bold" size="22.0" />
            </font>
        </Label>

        <!-- STEP 1: BOOK SEARCH (Event-3) -->
        <Label layoutX="20.0" layoutY="60.0" text="Step 1: Find Book" textFill="#2980b9">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Label layoutX="20.0" layoutY="90.0" text="Book ID / Title:" />
        <TextField fx:id="bookSearchTextField" layoutX="120.0" layoutY="86.0" prefHeight="26.0" prefWidth="200.0" promptText="Enter Book ID" />
        <Button layoutX="330.0" layoutY="86.0" mnemonicParsing="false" onAction="#searchBookOnClick" text="Check Availability" />

        <!-- Book Details Output -->
        <Label layoutX="20.0" layoutY="125.0" text="Title:" textFill="#666666" />
        <Label fx:id="bookTitleLabel" layoutX="60.0" layoutY="125.0" text="---" />

        <Label layoutX="200.0" layoutY="125.0" text="Author:" textFill="#666666" />
        <Label fx:id="bookAuthorLabel" layoutX="250.0" layoutY="125.0" text="---" />

        <Label layoutX="400.0" layoutY="125.0" text="Status:" textFill="#666666" />
        <Label fx:id="bookStatusLabel" layoutX="450.0" layoutY="125.0" text="---" textFill="#e74c3c" />

        <Line endX="760.0" layoutX="20.0" layoutY="160.0" startX="0.0" stroke="#dcdcdc" />

        <!-- STEP 2: BORROWER SEARCH (Event-5) -->
        <Label layoutX="20.0" layoutY="180.0" text="Step 2: Find Borrower" textFill="#2980b9">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Label layoutX="20.0" layoutY="210.0" text="Borrower ID:" />
        <TextField fx:id="borrowerSearchTextField" layoutX="120.0" layoutY="206.0" prefHeight="26.0" prefWidth="200.0" promptText="Prisoner or Staff ID" />
        <Button layoutX="330.0" layoutY="206.0" mnemonicParsing="false" onAction="#searchBorrowerOnClick" text="Verify User" />

        <!-- Borrower Details Output -->
        <Label layoutX="20.0" layoutY="245.0" text="Name:" textFill="#666666" />
        <Label fx:id="borrowerNameLabel" layoutX="65.0" layoutY="245.0" text="---" />

        <Label layoutX="200.0" layoutY="245.0" text="Type:" textFill="#666666" />
        <Label fx:id="borrowerTypeLabel" layoutX="240.0" layoutY="245.0" text="---" />

        <Line endX="760.0" layoutX="20.0" layoutY="280.0" startX="0.0" stroke="#dcdcdc" />

        <!-- STEP 3: ISSUE DETAILS (Event-7) -->
        <Label layoutX="20.0" layoutY="300.0" text="Step 3: Confirm Details" textFill="#2980b9">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Label layoutX="20.0" layoutY="330.0" text="Issue Date:" />
        <DatePicker fx:id="issueDatePicker" layoutX="120.0" layoutY="326.0" prefHeight="26.0" prefWidth="200.0" />

        <Label layoutX="350.0" layoutY="330.0" text="Return Date:" />
        <DatePicker fx:id="returnDatePicker" layoutX="430.0" layoutY="326.0" prefHeight="26.0" prefWidth="200.0" />

        <!-- ACTIONS -->
        <Button layoutX="250.0" layoutY="390.0" mnemonicParsing="false" onAction="#issueBookOnClick" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #3498db;" text="Confirm Issue" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

        <!-- FEEDBACK LABEL -->
        <Label fx:id="outputLabel" alignment="CENTER" layoutX="200.0" layoutY="440.0" prefWidth="400.0" />

        <!-- NAVIGATION -->
        <Button layoutX="680.0" layoutY="450.0" mnemonicParsing="false" onAction="#backOnClick" prefHeight="30.0" prefWidth="100.0" text="Back" />
    </children>
</AnchorPane>