<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.prisonmanagementsystem.Warden.DailyReportsController">
    <children>
        <!-- HEADER -->
        <Label layoutX="14.0" layoutY="14.0" text="Daily Activity &amp; Security Reports">
            <font>
                <Font name="Arial Bold" size="20.0" />
            </font>
        </Label>

        <!-- SECTION 1: FILTERS (Event-3, Event-4) -->
        <Label layoutX="20.0" layoutY="60.0" text="Report Type:" />
        <ComboBox fx:id="reportTypeComboBox" layoutX="100.0" layoutY="56.0" prefHeight="26.0" prefWidth="150.0" promptText="Select Type" />

        <Label layoutX="270.0" layoutY="60.0" text="Date:" />
        <DatePicker fx:id="reportDatePicker" layoutX="310.0" layoutY="56.0" prefHeight="26.0" prefWidth="130.0" />

        <Label layoutX="460.0" layoutY="60.0" text="Block (Opt):" />
        <ComboBox fx:id="blockComboBox" layoutX="540.0" layoutY="56.0" prefHeight="26.0" prefWidth="100.0" promptText="All" />

        <Button layoutX="660.0" layoutY="56.0" mnemonicParsing="false" onAction="#generateReportOnClick" prefHeight="26.0" prefWidth="120.0" style="-fx-background-color: #3498db;" text="Generate Report" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>

        <Line endX="760.0" layoutX="20.0" layoutY="100.0" startX="0.0" stroke="#b5b5b5" />

        <!-- SECTION 2: TABULAR/TEXT SUMMARY (Event-8) -->
        <Label layoutX="20.0" layoutY="110.0" text="Report Summary:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextArea fx:id="summaryTextArea" editable="false" layoutX="20.0" layoutY="135.0" prefHeight="120.0" prefWidth="760.0" promptText="Generated report details will appear here..." style="-fx-font-family: 'Monospaced';" />

        <!-- SECTION 3: GRAPHICAL CHART (Event-8) -->
        <Label layoutX="20.0" layoutY="270.0" text="Visual Analytics:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <BarChart fx:id="activityChart" layoutX="20.0" layoutY="290.0" prefHeight="250.0" prefWidth="760.0" title="Activity Overview">
            <xAxis>
                <CategoryAxis label="Category" side="BOTTOM" fx:id="xAxis" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" label="Count" side="LEFT" />
            </yAxis>
        </BarChart>

        <!-- NAVIGATION -->
        <Button layoutX="680.0" layoutY="550.0" mnemonicParsing="false" onAction="#backOnClick" prefHeight="30.0" prefWidth="100.0" text="Back" />
    </children>
</AnchorPane>